<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LeaderBoard">

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/wins"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:gravity="center"
                android:text="@string/wins"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="31dp"
                tools:layout_editor_absoluteY="21dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TableLayout
                        android:id="@+id/winTable"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TableRow
                            android:id="@+id/winRow0"
                            android:layout_width="match_parent"
                            android:layout_height="31dp">

                            <TextView
                                android:id="@+id/winsDisplay"
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/display_names"
                                android:textColor="@android:color/background_dark"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/winsWins"
                                android:layout_width="197dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/wins"
                                android:textColor="@android:color/background_dark"
                                android:textStyle="bold" />
                        </TableRow>

                        <TableRow
                            android:id="@+id/winRow1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/winEntry_1_displayName"
                                android:layout_width="180dp"
                                android:layout_height="50dp"
                                android:gravity="center"
                                android:textColor="@color/changeAccountColor"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/winEntry_1_winCount"
                                android:layout_width="180dp"
                                android:layout_height="50dp"
                                android:gravity="center"
                                android:textColor="@color/changeAccountColor"
                                android:textStyle="bold" />
                        </TableRow>

                        <TableRow
                            android:id="@+id/winRow2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/winEntry_2_displayName"
                                android:layout_width="180dp"
                                android:layout_height="50dp"
                                android:gravity="center"
                                android:textColor="@android:color/background_dark" />

                            <TextView
                                android:id="@+id/winEntry_2_winCount"
                                android:layout_width="180dp"
                                android:layout_height="50dp"
                                android:gravity="center"
                                android:textColor="@android:color/background_dark" />
                        </TableRow>

                        <TableRow
                            android:id="@+id/winRow3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/winEntry_3_displayName"
                                android:layout_width="180dp"
                                android:layout_height="50dp"
                                android:gravity="center"
                                android:textColor="@android:color/background_dark" />

                            <TextView
                                android:id="@+id/winEntry_3_winCount"
                                android:layout_width="180dp"
                                android:layout_height="50dp"
                                android:gravity="center"
                                android:textColor="@android:color/background_dark" />
                        </TableRow>

                        <TableRow
                            android:id="@+id/winRow4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/winEntry_4_displayName"
                                android:layout_width="180dp"
                                android:layout_height="50dp"
                                android:gravity="center"
                                android:textColor="@android:color/background_dark" />

                            <TextView
                                android:id="@+id/winEntry_4_winCount"
                                android:layout_width="180dp"
                                android:layout_height="50dp"
                                android:gravity="center"
                                android:textColor="@android:color/background_dark" />
                        </TableRow>

                        <TableRow
                            android:id="@+id/winRow5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/winEntry_5_displayName"
                                android:layout_width="180dp"
                                android:layout_height="50dp"
                                android:gravity="center"
                                android:textColor="@android:color/background_dark" />

                            <TextView
                                android:id="@+id/winEntry_5_winCount"
                                android:layout_width="180dp"
                                android:layout_height="50dp"
                                android:gravity="center"
                                android:textColor="@android:color/background_dark" />
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
            </ScrollView>

            <TextView
                android:id="@+id/losses"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:gravity="center"
                android:text="@string/losses"
                android:textColor="@android:color/background_dark"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="293dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TableLayout
                        android:id="@+id/lossTable"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TableRow
                            android:id="@+id/lossRow0"
                            android:layout_width="match_parent"
                            android:layout_height="31dp">

                            <TextView
                                android:id="@+id/lossDisplay"
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/display_names"
                                android:textColor="@android:color/background_dark"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/lossLoss"
                                android:layout_width="197dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/losses"
                                android:textColor="@android:color/background_dark"
                                android:textStyle="bold" />
                        </TableRow>

                        <TableRow
                            android:id="@+id/lossRow1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/lossEntry_1_displayName"
                                android:layout_width="180dp"
                                android:layout_height="50dp"
                                android:gravity="center"
                                android:textColor="@android:color/holo_red_dark"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/lossEntry_1_lossCount"
                                android:layout_width="180dp"
                                android:layout_height="50dp"
                                android:gravity="center"
                                android:textColor="@android:color/holo_red_dark"
                                android:textStyle="bold" />
                        </TableRow>

                        <TableRow
                            android:id="@+id/lossRow2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/lossEntry_2_displayName"
                                android:layout_width="180dp"
                                android:layout_height="50dp"
                                android:gravity="center"
                                android:textColor="@android:color/background_dark" />

                            <TextView
                                android:id="@+id/lossEntry_2_lossCount"
                                android:layout_width="180dp"
                                android:layout_height="50dp"
                                android:gravity="center"
                                android:textColor="@android:color/background_dark" />
                        </TableRow>

                        <TableRow
                            android:id="@+id/lossRow3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/lossEntry_3_displayName"
                                android:layout_width="180dp"
                                android:layout_height="50dp"
                                android:gravity="center"
                                android:textColor="@android:color/background_dark" />

                            <TextView
                                android:id="@+id/lossEntry_3_lossCount"
                                android:layout_width="180dp"
                                android:layout_height="50dp"
                                android:gravity="center"
                                android:textColor="@android:color/background_dark" />
                        </TableRow>

                        <TableRow
                            android:id="@+id/lossRow4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/lossEntry_4_displayName"
                                android:layout_width="180dp"
                                android:layout_height="50dp"
                                android:gravity="center"
                                android:textColor="@android:color/background_dark" />

                            <TextView
                                android:id="@+id/lossEntry_4_lossCount"
                                android:layout_width="180dp"
                                android:layout_height="50dp"
                                android:gravity="center"
                                android:textColor="@android:color/background_dark" />
                        </TableRow>

                        <TableRow
                            android:id="@+id/lossRow5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/lossEntry_5_displayName"
                                android:layout_width="180dp"
                                android:layout_height="50dp"
                                android:gravity="center"
                                android:textColor="@android:color/background_dark" />

                            <TextView
                                android:id="@+id/lossEntry_5_lossCount"
                                android:layout_width="180dp"
                                android:layout_height="50dp"
                                android:gravity="center"
                                android:textColor="@android:color/background_dark" />
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>